@using PopForums.Controllers
@{
    ViewBag.Title = PopForums.Resources.ForgotPassword;
    Layout = "~/Areas/PopForums/Views/Shared/PopForumsMaster.cshtml";
}

<div id="TopBreadcrumb" class="navAbsolute">
	<h1>@PopForums.Resources.ForgotPassword</h1>
	<p>
		^ @Html.ActionLink(PopForums.Resources.Forums, "Index", ForumHomeController.Name, null, null)
	</p>
</div>

<p>@PopForums.Resources.ForgotInstructions</p>

@using (Html.BeginForm())
{
	<p>
		@Html.TextBox("Email")
		<input type="submit" value="@PopForums.Resources.SendEmailButton" />
	</p>
}

<p class="warning">@ViewBag.Result</p>